<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_baseline_account_circle_24"
        android:layout_centerHorizontal="true"
        android:contentDescription="TODO" />

    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="13dp"
    android:layout_marginTop="150dp"
    app:cardBackgroundColor="#EEFFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEFFFFFF"
        android:padding="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="LOGIN TO ACCOUNT"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/usr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="7dp"
            android:text="username "
            android:textSize="16sp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/usrname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usr"
            android:background="@drawable/edit_txt"
            android:hint = "xyz@gmail.com"
            android:padding="10dp"/>
        <TextView

            android:id="@+id/pss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usrname"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="7dp"
            android:text="password "
            android:textSize="16sp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pss"
            android:background="@drawable/edit_txt"
            android:hint = "*********"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass"
            android:layout_marginTop="30dp"
            android:background="@drawable/verify"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="LOGIN"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>